@using System.Diagnostics
@using System.Runtime.InteropServices
@using Microsoft.AspNetCore.Components.Web

<button class="app-config-item" @onclick="Click" disabled="@Disable">
    <div class="app-config-item-icon-background">
        <i class="@Icon"></i>
    </div>
    <label>@Label</label>
</button>

@code{

    [Parameter] public string Icon { get; set; } = "fa-solid fa-cog";
    [Parameter] public string Label { get; set; } = "Config";
    [Parameter] public EventCallback OnClick { get; set; }
    [Parameter] public bool Disable { get; set; } = false;

    private void Click()
    {
        OnClick.InvokeAsync();
    }
}